{
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "es2017",
    "removeComments": false,
    "declaration": true,
    "inlineSources": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "preserveConstEnums": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmit": false,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./"
  ]
}