{
  "compilerOptions": {
    "strict": true,
    "sourceMap": false,
    "rootDir": "./source",
    "module": "ESNext",
    "target": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "removeComments": false,
    "declaration": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules",
    "./~commonjs",
    "./~esm"
  ],
  "include": [
    "./source"
  ]
}